extends layout

block content
    link(rel='stylesheet' href='/stylesheets/account.css' media='screen')
    #df.w3-card-4.modal
    #display.w3-card-4.modal
    section#sec-fac6.u-clearfix.u-section-1
        .u-clearfix.u-sheet.u-valign-middle.u-sheet-1
            .u-clearfix.u-expanded-width.u-layout-wrap.u-layout-wrap-1
                .u-layout
                    .u-layout-row
                        .u-container-style.u-custom-color-1.u-layout-cell.u-size-18.u-layout-cell-1
                            .u-container-layout.u-container-layout-1
                                h3.u-align-center.u-custom-font.u-font-ubuntu.u-text.u-text-default.u-text-1 About Me
                                if path == 0
                                    img.u-image.u-image-circle.u-preserve-proportions.u-image-1(src='https://www.inmosenna.com/wp-content/uploads/2018/07/avatar-user-business-man-399587fe24739d5a-512x512-300x300.png' alt='' data-image-width='300' data-image-height='300')
                                else 
                                    img.u-image.u-image-circle.u-preserve-proportions.u-image-1(src="http://localhost:3001/users/"+user_id+"/profilepic.jpeg?token="+token alt='' data-image-width='300' data-image-height='300')
                                button.u-btn.u-btn-round.u-button-style.u-hover-palette-1-light-1.u-palette-1-base.u-radius-50.u-btn-1(type='button' onclick="mudafoto(\"" + user_id + "\",\"" + token +"\");") Change Pic
                                .u-clearfix.u-custom-html.u-custom-html-1
                                    dl
                                        dt
                                            b Nome:
                                            dd=user_name
                                        dt
                                            b Email de Contacto:
                                            dd= user_mail
                                button.u-btn.u-btn-round.u-button-style.u-hover-palette-1-light-1.u-palette-1-base.u-radius-50.u-btn-2(onclick="openUploadModal(\""+user_id+"\")") Upload
                                .u-table.u-table-responsive.u-table-1
                                    table.u-table-entity(style="margin:22px;font-size:12px")
