extends layout

block content
    link(rel='stylesheet' href='/stylesheets/file.css' media='screen')
    section#sec-fac6.u-clearfix.u-section-1
        .u-clearfix.u-sheet.u-sheet-1
            .u-clearfix.u-expanded-width.u-layout-wrap.u-layout-wrap-1
                .u-layout
                    .u-layout-row
                        .u-container-style.u-custom-color-1.u-layout-cell.u-size-18.u-layout-cell-1
                            .u-container-layout.u-container-layout-1
                                h3.u-align-center.u-custom-font.u-font-ubuntu.u-text.u-text-default.u-text-1= fich.title
                                .u-clearfix.u-custom-html.u-custom-html-1
                                    dl
                                        dt
                                            b Subtitle:
                                        dd= fich.subtitle
                                        dt
                                            b Resource Type:
                                        dd= fich.resourceType
                                        dt
                                            b Type:
                                        dd= fich.mimetype
                                        dt
                                            b Author:
                                        dd= fich.autor
                                        dt
                                            b Description:
                                        dd= fich.descricao
                                        dt
                                            b Size:
                                        dd= fich.size
                                        dt
                                            b Date:
                                        dd= fich.creationDate
                                        dt
                                            b Classification:
                                        dd= fich.estrelas.numero
                                        dt
                                            b Comments No:
                                        dd= fich.comentarios.length
                                    btn.u-align-center.u-btn.u-btn-round.u-button-style.u-dialog-link.u-hover-palette-1-light-1.u-palette-1-base.u-radius-50.u-btn-1(onclick="showComments(\""+fich._id+"\",\""+idUser+"\")") Add Comment
                                .u-table.u-table-responsive.u-table-1
                                    table.u-table-entity
                                        colgroup
                                            col(width='15%')
                                            col(width='25%')
                                            col(width='50%')
                                            col(width='10%')
                                        thead.u-align-center.u-custom-color-1.u-table-header.u-table-header-1
                                            tr(style='height: 30px;')
                                                th.u-table-cell  
                                                th.u-table-cell User 
                                                th.u-table-cell Comment 
                                                th.u-table-cell Date 
                                        tbody.u-align-center.u-table-body
                                            each c in fich.comentarios 
                                                tr(style='height: 75px;')
                                                    - var nome = ""
                                                    each u in users
                                                        if u._id == c.autor
                                                            - nome = u.name
                                                            if u.profilepic == 0
                                                                td.u-border-1.u-border-grey-40.u-border-no-left.u-border-no-right.u-table-cell
                                                                    img.u-image.u-image-circle.u-preserve-proportions.u-image-1(src='https://www.inmosenna.com/wp-content/uploads/2018/07/avatar-user-business-man-399587fe24739d5a-512x512-300x300.png' alt='' width="75" height="75") 
                                                            else
                                                                td.u-border-1.u-border-grey-40.u-border-no-left.u-border-no-right.u-table-cell
                                                                    img.u-image.u-image-circle.u-preserve-proportions.u-image-1(src="http://localhost:3001/users/"+u._id+"/profilepic.jpeg?token="+token alt='' width="75" height="75")

                                                    td.u-border-1.u-border-grey-40.u-border-no-left.u-border-no-right.u-table-cell= nome
                                                    td.u-border-1.u-border-grey-40.u-border-no-left.u-border-no-right.u-table-cell
                                                        textarea(style="resize: none;" rows="3" cols="37" readonly)= c.descricao
                                                    td.u-border-1.u-border-grey-40.u-border-no-left.u-border-no-right.u-table-cell= c.data
                        .u-container-style.u-layout-cell.u-size-42.u-layout-cell-2
                            .u-container-layout.u-container-layout-2
    div(id="displayComments")