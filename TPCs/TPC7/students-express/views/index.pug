extends layout

block content
    .w3-container.w3-section.w3-card-4
        header.w3-container.w3-blue
            h3.w3-left Lista de Alunos
            form(action='/registar' method='GET')
                input.w3-btn.w3-white.w3-right(style="margin-top:0.5%" type='submit' value='Registar')
        if lista.length > 0
            .w3-container
                table.w3-table-all.w3-section
                    tr
                        th Número
                        th Nome
                        th Informação
                    each a in lista
                        tr
                            td= a.Número
                            
                            td= a.Nome

                            td
                                a(href="/alunos/"+a._id style="text-decoration: none") +
                            
                               
        else
            div(class="w3-container")
                p Ainda não há alunos.
    footer(class="w3-container w3-blue")
